---
import { IProjectDetails } from "@types";
const { project, isReverse } = Astro.props as IProjectDetails;
---

<div
    class="group relative flex flex-col md:flex-row items-center justify-between gap-8 py-12 px-4 sm:px-6 lg:px-8 hover:bg-gray-50/50 transition-colors duration-300 rounded-xl"
>
    <div
        class={`w-full md:w-1/2 overflow-hidden rounded-lg shadow-lg transform transition-transform duration-500 ${isReverse ? "md:order-2" : ""}`}
    >
        <a href={project.route} class="block relative">
            <div
                class="absolute inset-0 bg-black/30 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center z-10"
            >
            </div>
            <img
                src={project.thumbnail}
                alt={`${project.name} thumbnail`}
                class="w-full h-auto object-cover transition-transform duration-500 group-hover:scale-110"
                loading="lazy"
            />
        </a>
    </div>

    <div
        class={`w-full md:w-1/2 space-y-4 ${isReverse ? "md:pr-8" : "md:pl-8"}`}
    >
        <div class="flex justify-between items-center">
            <h3 class="text-3xl font-bold text-gray-900 dark:text-white">
                {project.name}
            </h3>
            <div class="flex space-x-2">
                {
                    project.githubUrl && (
                        <a
                            href={project.githubUrl}
                            target="_blank"
                            class="text-gray-600 hover:text-sky-600 dark:text-gray-300 dark:hover:text-sky-400 transition-colors"
                            aria-label="GitHub Repository"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="currentColor"
                            >
                                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                            </svg>
                        </a>
                    )
                }
                {
                    project.liveUrl && (
                        <a
                            href={project.liveUrl}
                            target="_blank"
                            class="text-gray-600 hover:text-sky-600 dark:text-gray-300 dark:hover:text-sky-400 transition-colors"
                            aria-label="Live Project"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                            >
                                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                                <polyline points="15 3 21 3 21 9" />
                                <line x1="10" x2="21" y1="14" y2="3" />
                            </svg>
                        </a>
                    )
                }
            </div>
        </div>

        <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
            {project.description}
        </p>

        <div class="flex flex-wrap gap-2">
            {
                project.skills.map((skill) => (
                    <span class="px-3 py-1 text-xs font-medium text-sky-700 bg-sky-100 dark:text-sky-300 dark:bg-sky-900/50 rounded-full">
                        {skill}
                    </span>
                ))
            }
        </div>

        <a
            href={project.route}
            class="inline-block mt-4 px-6 py-2 bg-sky-600 text-white rounded-full hover:bg-sky-700 transition-colors"
        >
            Read More
        </a>
    </div>
</div>
